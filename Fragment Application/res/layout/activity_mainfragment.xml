<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/writeMessageButton"
        android:layout_width="271sp"
        android:layout_height="47sp"
        android:layout_marginStart="68sp"
        android:layout_marginLeft="68sp"
        android:layout_marginTop="281sp"
        android:layout_marginEnd="72sp"
        android:layout_marginRight="72sp"
        android:layout_marginBottom="34sp"
        android:text="Write Some Message"
        android:backgroundTint="@android:color/holo_blue_light"
        android:textColor="@android:color/background_light"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/getMessageButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/getMessageButton"
        android:layout_width="274sp"
        android:layout_height="44sp"
        android:layout_marginStart="68sp"
        android:layout_marginLeft="68sp"
        android:layout_marginEnd="69sp"
        android:layout_marginRight="69sp"
        android:layout_marginBottom="325sp"
        android:text="Get Some Message"
        android:backgroundTint="@android:color/holo_red_light"
        android:textStyle="bold"
        android:textColor="@android:color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>